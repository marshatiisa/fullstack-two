    <!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body class="wholeSection bg-dark text-light">
    <h1>Todo List: </h1>
    <!--changing ul class to items-->
    <ul class="messages ">
    <% for(let i=0; i < messages.length; i++) {%>
        <% if(messages[i].priority === false) {%>
        <li <%=messages[i].completed ? "class=check" : "class=messages"%>> 
            <% if(messages[i].completed === true) {%>
                <span><%= messages[i].thing %></span>
            <% }else{ %>
                <span><%= messages[i].thing %></span>
            <% } %>    
            <button <%=messages[i].completed ? "class=hide" : "class=completed"%>>Check completed</button>
            
            <span><i class="fa fa-thumbtack"></i></span>
            <span class='fa fa-trash'></span>
        </li>
    <% } %>
    <% } %>

    </ul>


    <h2>Add A Todo:</h2>

     <form action="/addTodo" method="POST">
        <input type="text" placeholder="Thing To Do" name="todoItem">
        <input type="submit" id="clickForItem">
    </form> 
    
 
 <div>
    <h3>Priority task list</h3>
    <ul class="messages prioritySection">
        <% for(let i=0; i < messages.length; i++) {%> 
            <% if(messages[i].priority === true) {%>
    
            <li <%=messages[i].completed ? "class=check" : "class=messages"%>> 
                <% if(messages[i].completed === true) {%>
                    <span><%= messages[i].thing %></span>
                <% }else{ %>
                    <span><%= messages[i].thing %></span>
                <% } %>    
                <button <%=messages[i].completed ? "class=hide" : "class=completed"%>>Check completed</button>
                
                <span><i class="fa fa-thumbtack"></i></span>
                <span class='fa fa-trash'></span>
            </li>    
            <% } %>
        <% } %>
        </ul>
 </div>

    <script src='main.js'></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>

</body>
</html>
